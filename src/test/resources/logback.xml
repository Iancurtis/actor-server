<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <logger name="com.datastax" level="error"/>
    <logger name="com.newzly.phantom" level="error"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%date{ISO8601} %highlight(%-5level) %cyan(%logger{36}) %X{akkaSource} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
