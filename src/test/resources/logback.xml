<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <logger name="com.datastax" level="WARN"/>
    <logger name="com.websudos" level="WARN"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%X{akkaTimestamp} %highlight(%-5level) %cyan(%logger{36}) %magenta(%X{akkaSource}) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
